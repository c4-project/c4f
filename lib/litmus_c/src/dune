;; -*- mode: lisp; -*-

(library
 (name c4f_litmus_c)
 (public_name c4f.litmus_c)
 (synopsis "c4f: Litmus/C AST and frontend")
 (modules_without_implementation ast_basic_types ast_types)
 (preprocess
  (pps ppx_deriving.std ppx_jane ppx_yojson_conv ppx_accessor sedlex.ppx))
 (libraries sexplib0 stdio base base.caml core_kernel accessor accessor_base
   fmt menhirLib plumbing c4f.common yojson c4f.fir c4f.litmus c4f.utils
   sedlex travesty.base_exts))

;; C/Litmus parser
;;
;; We need --infer false, to avoid a cyclic dependency (for some reason).

(menhir
 (infer false)
 (flags "--table")
 (modules parser))

(rule
 (deps messages.check)
 (action
  (with-stdout-to
   messages.ml
   (run menhir --table %{dep:parser.mly} --compile-errors %{dep:c.messages}))))

(rule
 (with-stdout-to
  c.auto.messages
  (run menhir --table %{dep:parser.mly} --list-errors)))

(rule
 (with-stdout-to
  messages.check
  (run menhir --table %{dep:parser.mly} --compare-errors
    %{dep:c.auto.messages} --compare-errors %{dep:c.messages})))
